# ======= DATABASE =======
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/chatdesk

# ======= JWT AUTH =======
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ======= AI / LLM =======
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ======= MILVUS CLOUD (Zilliz) =======
# Get from: https://cloud.zilliz.com/ -> Cluster -> Connect
MILVUS_URI=https://in03-xxxxxxx.serverless.aws-eu-central-1.cloud.zilliz.com
MILVUS_TOKEN=your-milvus-token

# ======= FACEBOOK =======
# Get from: https://developers.facebook.com/ -> Your App -> Settings -> Basic
FB_APP_ID=your-facebook-app-id
FB_APP_SECRET=your-facebook-app-secret
FB_VERIFY_TOKEN=chatdesk_verify_token
FB_OAUTH_REDIRECT_URI=http://localhost:8000/api/channels/facebook/callback

# ======= CORS =======
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
